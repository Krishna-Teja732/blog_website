<div class="container mt-5">
    <div class="d-flex justify-content-between mb-0 align-items-center">
        <div class="h1">{{blog.title}}</div>
        {{#if owner}}
            <div class="dropdown ">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Dropdown button
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>
        {{/if}}
    </div>
    <div class="text-muted mt-0">{{blog.subject}}</div>
    <div class="d-flex justify-content-between">
        <div>Author: {{blog.email_id}}</div>
        <div>created: {{blog.date}}</div>
    </div>
    <div class="border border-muted border-3 rounded mt-3 p-1">
        <p>{{blog.context}}
        </p>
    </div>
</div>

<section class="container mt-5 mb-5">
    <div>Comments</div>
    <form class="form-group">
    <input type="text" id="comment" class="from-control border border-muted border-2 w-100" placeholder="Click to add comment">
    <input type="button" class="d-none btn btn-outline-success mt-1" onclick="createComment()" value="Post Comment">
    </form>
    <div class="list-group list-group-flush">
        {{#if emtCommentsList}}
            <div class="container text-center mt-3">
                <p>No Comments on this Blog!</p>
            </div>
        {{else}}
            {{#each commentsList}}
                <li class="list-group-item m-2">
                    <div>
                        <b>{{this.email_id}}  </b>
                        <div class="muted d-inline">{{this.date}}</div>
                        <br>
                        <div class="ps-3">{{this.comment}}</div>
                    </div>
                </li>
            {{/each}}
        {{/if}}
    </div>
</section>